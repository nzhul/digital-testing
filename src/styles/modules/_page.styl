body
  display: flex
  min-height: 100vh
  flex-direction: column


#main
  flex: 1
  display: flex


#app-sidebar
  display: flex
  flex-direction: column
  position: relative

  &:after
    content: ""
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: 15px
    height: 100%
    box-shadow: inset -5px 0 10px 0 rgba(0,0,0,0.2)
    pointer-events: none


#app-content
  padding: 20px
  display: flex
  flex-direction: column
  width: 100%


.box
  height: 100%
  margin: 10px
  padding: 0 15px
  background: #fff
  box-shadow: 0 1px #fff inset, 0 1px 3px rgba(34, 25, 25, 0.4)


  h2
    @extend h4
    padding: 4px
    border-bottom: 3px dashed deeppink


  ul
    font-size: 17px
    margin: 0
    padding: 0
    list-style: none

    > li
      margin: 0
      padding: 0

    > li > a
      padding: 10px
      display: block

