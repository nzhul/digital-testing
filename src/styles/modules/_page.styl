.box
  height: 100%
  margin: 10px
  padding: 0 15px
  background: #fff
  box-shadow: 0 1px #fff inset, 0 1px 3px rgba(34, 25, 25, 0.4)


  h2
    @extend h4
    padding: 4px
    border-bottom: 3px dashed deeppink


ul
  font-size: 17px
  margin: 0
  padding: 0
  list-style: none

  > li
    margin: 0
    padding: 0

  > li > a
    padding: 10px
    display: block

