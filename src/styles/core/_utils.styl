// margins and paddings
// ====================

//       class prefix  property        iterations
$utils = p             padding        5,
         pt            padding-top    15,
         pb            padding-bottom 15,
         pr            padding-right  10,
         pl            padding-left   10,
         m             margin         5,
         mt            margin-top     10,
         mb            margin-bottom  15,
         mr            margin-right   10,
         ml            margin-left    10

for $item in $utils
  for $i in $item[2]..0
    .-{$item[0]}{$i}
      if $i > 5
        {$item[1]}: ($i == 0 ? $i : $i * 10px) !important
      else
        +$create-responsive-utils()
          {$item[1]}: ($i == 0 ? $i : $i * 10px) !important



