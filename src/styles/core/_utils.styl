$create-responsive-utils($includeSelf = true)
  if $includeSelf
    {block}
  $media-queries = "xl", "l", "m", "s"
  for $i in $media-queries
    +media(lookup("$" + $i))
      +prefix-classes('-' + $i)
        /{selector()}
          {block}

